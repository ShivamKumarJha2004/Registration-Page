@model List<RegistrationPage.Models.User>
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: darkgrey
    }
</style>
@if (Model != null && Model.Any() )
{
    <div>
        <h2 class="display-5 text-center text-decoration-underline ">User Details</h2>
    </div>
   <br />
    <div class="container" style="font-size:1.2rem; font-family:poppins">
        <table class="table table-bordered border-dark">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h2 class="display-1" style="position:relative; top:6rem;left:2rem ">No users signed up yet.</h2>
}

