@model RegistrationPage.Models.User;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script type="text/javascript">
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
        });
    </script>
    <script>
        function clearForm() {
            document.getElementById('myform').reset();
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <style>
        i {
            font-size: 1.3rem;
            margin-right: 10px;
            color: azure;
        }

        input::placeholder {
            font-size: 16px;
        }
    </style>

</head>

<body>

    <section class="vh-100" style="background-color: #eee;font-family:poppins">
        <div class="container h-100">
            <div class="container" >
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <br />

                        <div class="card text-black ">
                            <div class="card-body p-md-5 bg-dark" style="height:40rem">
                                <div class="row justify-content-center">
                                    <div class="title display-4 text-white " style="position:relative;left:25rem;"><span>Sign Up</span></div>
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">




                                        <br />
                                        <br />

                                        <form asp-controller="signup" method="post" asp-action="Index" id="myform" >

                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user"></i>
                                                <div class="form-outline flex-fill mb-0">

                                                    <input asp-for="Username" class="form-control" placeholder="Username" required />


                                                </div>
                                            </div>


                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                                <div class="form-outline flex-fill mb-0">

                                                    <input asp-for="Email" class="form-control" placeholder="Email" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-lock"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />

                                                </div>
                                            </div>
                                            <div class="form-check d-flex justify-content-center mb-5">
                                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                                <label class="form-check-label text-white" for="form2Example3">
                                                    I agree all statements in <a href="#!">Terms of service</a>
                                                </label>
                                            </div>



                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <button type="submit" class="btn btn-primary btn-lg" style="font-family:roboto;position:relative; right:8rem">Register</button>
                                            </div>
                                            <div class=" " style="position:relative; left:15rem; bottom:4.4rem; ">
                                                <a asp-controller="signup" onclick="clearForm()" class="btn btn-dark" style="font-family:roboto;font-size:20px;padding:9px 7px;position:relative;left:5rem">Clear</a>
                                            </div>
                                            <div>
                                                <a asp-controller="signup" asp-action="signupsuccess" class="btn btn-secondary" style="font-size:20px;padding:9px 22px;position:relative;left:10rem; bottom:7.7rem;font-family:roboto">Show Data</a>
                                            </div>
                                        </form>


                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



